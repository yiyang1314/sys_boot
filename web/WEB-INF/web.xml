<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>EMP_project</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>EmpServlet</servlet-name>
    <servlet-class>cn.sz.gl.servlet.EmpServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmpServlet</servlet-name>
    <url-pattern>/emp_save</url-pattern>
    <url-pattern>/emp_findById</url-pattern>
    <url-pattern>/emp_findAll</url-pattern>
    <url-pattern>/emp_updateById</url-pattern>
    <url-pattern>/emp_page</url-pattern>
    <url-pattern>/emp_delete</url-pattern>  
    <url-pattern>/emp_ids</url-pattern>                 
  </servlet-mapping>
  
  <servlet>
    <servlet-name>UsersServlet</servlet-name>
    <servlet-class>cn.sz.gl.servlet.UsersServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UsersServlet</servlet-name>
    <url-pattern>/users_save</url-pattern>
    <url-pattern>/users_findById</url-pattern>
    <url-pattern>/users_updateById</url-pattern>
    <url-pattern>/users_ids</url-pattern>
    <url-pattern>/users_page</url-pattern>
    <url-pattern>/users_delete</url-pattern>                     
  </servlet-mapping>
  
 <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.sz.gl.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/users_login</url-pattern>
    <url-pattern>/users_logout</url-pattern>
    <url-pattern>/users_error</url-pattern>                   
  </servlet-mapping>
  <servlet>
    <servlet-name>DeptServlet</servlet-name>
    <servlet-class>cn.sz.gl.servlet.DeptServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeptServlet</servlet-name>
    <url-pattern>/dept_save</url-pattern>
    <url-pattern>/dept_findById</url-pattern>
    <url-pattern>/dept_findAll</url-pattern>
    <url-pattern>/dept_updateById</url-pattern>
    <url-pattern>/dept_page</url-pattern>
    <url-pattern>/dept_delete</url-pattern>  
    <url-pattern>/dept_ids</url-pattern>
    <url-pattern>/dept_findByIdPlus</url-pattern>
                     
  </servlet-mapping>

</web-app>